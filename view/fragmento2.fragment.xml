<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog id="dialogoReporte" type="Standard" title="New Donor">
		<content>
			<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0" labelSpanL="5" labelSpanM="3" adjustLabelSpan="false">
			        <sap.ui.layout.form:content>
			        	<l:VerticalLayout class="sapUiContentPadding" width="100%">
			        	<l:content>
			          	<Label text="Name" design="Bold" />
			            <Input id="name2" width="100%" type="Text"/>
			            <Label text="Lastname" design="Bold" />
			            <Input id="lastname2" width="100%" type="Text" />
                  <Label text="Email" design="Bold" />
			            <Input id="email2" width="100%" type="Email" />
                  <Label text="Birthdate" design="Bold" />
                  <DatePicker id="birthdate2" width="auto" />
                  <Label text="Phone" design="Bold" />
			            <Input id="phone2" width="100%" type="Number" />
                  <Label text="Gender" design="Bold" />
                  <Select id="gender2" >
		                 <items>
	                        <core:ListItem text="Male" key="male" />
	                        <core:ListItem text="Female" key="female" />
	                     </items>
	                </Select>
			        	</l:content>
			            </l:VerticalLayout>
			        </sap.ui.layout.form:content>
			    </sap.ui.layout.form:SimpleForm>
		</content>
		<beginButton>
			<Button id="createBtn" type="Accept" width="auto" text="Create" />
		</beginButton>
		<endButton>
      <Button id="cancelBtn" type="Reject" width="auto" text="Cancel"/>

		</endButton>

	</Dialog>
</core:FragmentDefinition>
